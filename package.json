{
  "name": "eslint-plugin-conarti-fsd",
  "version": "0.0.39",
  "description": "Feature-sliced design methodology plugin",
  "repository": "https://github.com/conarti/eslint-plugin-fsd.git",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "feature-sliced",
    "feature-slices",
    "feature-driven",
    "feature-based"
  ],
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "author": "conarti",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./import-order": "./dist/configs/import-order/index.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "npm-run-all \"lint:*\"",
    "lint:js": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui --api 9527",
    "test:run": "vitest run",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "local-build": "node scripts/local-build.js",
    "release": "node scripts/release.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@tsconfig/strictest": "^2.0.1",
    "@types/eslint": "^8.40.2",
    "@types/node": "^20.2.5",
    "@types/picomatch": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.53.0",
    "@typescript-eslint/utils": "^5.59.9",
    "@vitest/ui": "^0.32.0",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.42.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-plugin": "^5.0.0",
    "eslint-plugin-filenames-simple": "^0.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vitest": "^0.2.6",
    "execa": "5.1.1",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "rimraf": "^5.0.1",
    "semver": "^7.3.8",
    "typescript": "^5.1.3",
    "vitepress": "^1.0.0-alpha.64",
    "vitest": "^0.32.0"
  },
  "engines": {
    "node": "^14.17.0 || ^16.0.0 || >= 18.0.0"
  },
  "peerDependencies": {
    "eslint": ">=7",
    "eslint-plugin-import": ">=2.26"
  },
  "license": "ISC",
  "dependencies": {
    "picomatch": "^2.3.1"
  }
}
